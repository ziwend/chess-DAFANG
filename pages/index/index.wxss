.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box; /* 包括 padding 和 border 在内的总宽度和高度 */
  padding: 20rpx; /* 可选：添加内边距，防止内容贴边 */
  align-items: center;
  justify-content: space-between; /* 调整内容均匀分布 */  
}
.player-box {
  display: flex; /* 水平分布 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  width: 100%; /* 宽度为100% */
  position: relative; /* 相对定位 */
  gap: 20rpx; /* 添加间距 */
}

/* 自适应文字宽度 */
.ai-setting-button {
  position: absolute;
  right: 0;
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  width: 200rpx !important; 
}
.piece-box {
  width: 150rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 2rpx solid #000000;
  display: flex; 
  justify-content: space-between;
  align-items: center;
  margin: 0 20rpx;
  position: relative; /* 添加相对定位 */
}

.piece-box .piece {
  width: 60rpx; 
  height: 60rpx;
}

.piece-box .piece-count {
  position: relative; /* 绝对定位，相对于父容器 piece-box */ 
  left: 107rpx; /* 距离棋子右侧的间距 */ 
  font-size: 20rpx;
  color: #666;
}

.black-box {
  background-color: #ffffff;
}

.white-box {
  background-color: #e0e0e0;
}

.board {
  width: 90vmin; /* 使用视窗相对单位 */
  height: 80vmin;
  max-width: 600rpx; /* 设置最大宽度 */
  max-height: 600rpx;
  position: relative;
  background-color: #f5f5f5;
  margin: 10rpx auto; /* 上下margin改小，使用auto实现水平居中 */
  box-sizing: border-box;
}

/* 横线 */
.horizontal-lines {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.horizontal-line {
  position: absolute;
  width: 100%;
  height: 2rpx;
  background-color: #000;
}

/* 竖线 */
.vertical-lines {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.vertical-line {
  position: absolute;
  width: 2rpx;
  height: 100%;
  background-color: #000;
}

.row {
  display: flex;
  flex: 1;
  position: relative;
}

.cell {
  flex: 1;
  border: 1px solid #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
}


.flash {
  animation: flash 1s 3;
}

@keyframes flash {
  0% { opacity: 1; }
  50% { opacity: 0.3; }
  100% { opacity: 1; }
}

.intersection {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  transform: translate(-50%, -50%);
  z-index: 2;
}

.piece {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 3;
}

.piece.black {
  background-color: #000000;
}

.piece.white {
  background-color: #ffffff;
  border: 2rpx solid #000000;
}

/* 添加阵型边框样式 */
.piece.formation-border {
  border: 5rpx solid #ffcc00;
  box-shadow: 0 0 10rpx rgba(255, 204, 0, 0.5);
}

.controls {
  display: flex;
  justify-content: center; /* 改为居中对齐 */
  gap: 30rpx; /* 按钮之间的间距 */
  width: 100%;
  padding: 0 20rpx;
}

.control-button {
  padding: 12rpx 24rpx; /* 设置内边距 */
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  transition: all 0.3s ease;
  white-space: nowrap; /* 防止按钮内文字换行 */
  width: auto !important; /* 使按钮宽度随内容变化 */
  min-width: 0 !important; /* 移除最小宽度限制 */
  box-sizing: border-box; /* 包括 padding 和 border 在内的总宽度 */
}
/* 按钮点击效果 */
.control-button:active {
  transform: translateY(2rpx);
  opacity: 0.8;
}
.timer {
  min-width: 120rpx; /* 设置最小宽度 */
  text-align: center;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
}

.game-status {
  width: 100%;
  text-align: center;
  background-color: #f5f5f5;
  padding: 12rpx 24rpx;
}

.status-text {
  font-size: 32rpx;
  color: #333333;
}

.extra-moves {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}

/* 箭头按钮样式 */
.arrow-button {
  width: 70rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  position: absolute; /* 改为绝对定位 */
  left: calc(50% - 140rpx); /* 位于 piece-box 左侧 */
  color: #ffcc00;
  font-weight: bolder;
  font-size:larger;
}

.arrow-button.active {
  opacity: 1;
}
